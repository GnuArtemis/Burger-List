<div class="container">

    <h1 class="header">Burgers!</h1>
    <div class="row">

        <div class="col s12 m6">
            <h2 class="center-align">Burgers NOT YET EATEN</h2>


            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col s12 m6">
            <h2 class="center-align">Burgers DEVOURED</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row center-align">
        <div class="col s12">
            <h2>What's your favorite Burger?</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" id="ca" name="name">
                </div>

                <button type="submit" class="waves-effect waves-light btn">Add Burger</button>
            </form>
        </div>
    </div>
</div>